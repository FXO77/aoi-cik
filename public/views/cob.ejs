<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/assets/css/ku.css">
</head>

<body>
    <div class="container">
        <header>
            <h1>Admin Dashboard</h1>
        </header>

        <main>
            <section class="form-section">
                <h2>Add New User</h2>
                <% if (typeof error !=='undefined' ) { %>
                    <div class="error">
                        <%= error %>
                    </div>
                    <% } %>
                        <form action="/admin/add-user" method="POST">
                            <div class="form-group">
                                <label for="username">username</label>
                                <input type="text" id="username" name="username" required>
                            </div>

                            <div class="form-group">
                                <label for="email">email</label>
                                <input type="email" id="email" name="email" required>
                            </div>

                            <div class="form-group">
                                <label for="password">password</label>
                                <input type="text" id="password" name="password" required>
                            </div>

                            <div class="form-group">
                                <label for="user_keys">user_keys</label>
                                <input type="text" id="user_keys" name="user_keys" required>
                            </div>

                            <div class="form-group">
                                <label for="limit">limit</label>
                                <input type="number" id="limit" name="limit" required>
                            </div>

                            <button type="submit">Add User</button>
                        </form>
            </section>

            <section class="table-section">
                <h2>User List</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Limit</th>
                            <th>User Keys</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user=> { %>
                            <tr>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.limit %>
                                </td>
                                <td>
                                    <%= user.user_keys %>
                                </td>
                                <td class="actions">
                                    <form action="/admin/delete-data" method="POST">
                                        <input type="hidden" name="userId" value="<%= user.id %>">
                                        <div style="margin-top: 5px;">
                                            <button type="submit" class="action-button"><i class="fas fa-trash-alt"></i>
                                                Delete</button>
                                        </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </section>
        </main>
    </div>
</body>

</html>